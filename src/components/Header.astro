---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { t } from '../i18n.ts';

const { lang } = Astro.props;
const current = lang;
const other = lang === 'pt-br' ? 'en' : 'pt-br';
const path = Astro.url.pathname.replace(`/${current}`, `/${other}`)
---

<header>
	<nav>
		<h2><a href={`/${lang}/`}>{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href={`/${lang}/`}>{t(lang, "home")}</HeaderLink>
			<HeaderLink href={`/${lang}/blog`}>{t(lang, "blog")}</HeaderLink>
			<HeaderLink href={`/${lang}/about`}>{t(lang, "about")}</HeaderLink>
		</div>
		<div>
		<center>
			<div class="switch">
				<input id="language-toggle" class="check-toggle check-toggle-round-flat" type="checkbox" checked={lang === 'pt-br'}>
				<label for="language-toggle" onclick={`window.location.href='${path}'`}></label>
				<span class="on">{current.toUpperCase()}</span>
				<span class="off">{other.toUpperCase()}</span>
			</div>
 		</center>
		</div>

	</nav>
</header>



<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
	.switch {
		position: relative;
		display: inline-block;
		margin: 0 5px;
	}

	.switch > span {
		position: absolute;
		top: 10px;
		pointer-events: none;
		font-size: 12px;
		font-weight: bold;
		text-transform: uppercase;
		text-shadow: 0 1px 0 rgba(0, 0, 0, .06);
		width: 50%;
		text-align: center;
	}

	.switch > span.on {
		left: 0;
		padding-left: 2px;
		color: var(--accent);
	}

	.switch > span.off {
		right: 0;
		padding-right: 4px;
		color: #fff;
	}

	input.check-toggle-round-flat:checked ~ .on {
		color: #fff;
	}

	input.check-toggle-round-flat:checked ~ .off {
		color: var(--accent);
	}

	.check-toggle {
		position: absolute;
		margin-left: -9999px;
		visibility: hidden;
	}

	.check-toggle + label {
		display: block;
		position: relative;
		cursor: pointer;
		outline: none;
		user-select: none;
	}

	input.check-toggle-round-flat + label {
		padding: 2px;
		width: 97px;
		height: 35px;
		background: linear-gradient(to right, var(--accent), var(--accent-dark));
		border-radius: 60px;
	}

	input.check-toggle-round-flat + label:before, 
	input.check-toggle-round-flat + label:after {
		display: block;
		position: absolute;
		content: "";
	}

	input.check-toggle-round-flat + label:before {
		top: 2px;
		left: 2px;
		bottom: 2px;
		right: 2px;
		background: linear-gradient(to right, var(--accent), var(--accent-dark));
		border-radius: 60px;
	}

	input.check-toggle-round-flat + label:after {
		top: 4px;
		left: 4px;
		bottom: 4px;
		width: 48px;
		background-color: #fff;
		border-radius: 52px;
		transition: margin 0.2s;
	}

	input.check-toggle-round-flat:checked + label:after {
		margin-left: 44px;
	}
</style>
