---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { t } from '../i18n.ts';

const { lang } = Astro.props;
const current = lang;
const other = lang === 'pt-br' ? 'en' : 'pt-br';
const path = Astro.url.pathname.replace(`/${current}`, `/${other}`)
---

<header>
	<nav>
		<h2><a href={`/${lang}/`}>{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href={`/${lang}/`}>{t(lang, "home")}</HeaderLink>
			<HeaderLink href={`/${lang}/blog`}>{t(lang, "blog")}</HeaderLink>
			<HeaderLink href={`/${lang}/about`}>{t(lang, "about")}</HeaderLink>
		</div>
		<a href={path}>{other.toUpperCase()}</a>
	</nav>
</header>



<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
