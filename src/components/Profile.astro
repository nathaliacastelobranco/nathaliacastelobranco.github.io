<style>
  .title-color {
    color: var(--black);
  }

  .profile {
    margin: 1rem 0;
    padding: 1rem;
    /* background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); */
    border-radius: 12px;
    color: var(--black);
  }

  .profile-container {
    display: flex;
    gap: 2rem;
    align-items: normal;
    width: 100%;
    margin: 0 auto;
  }

  .profile-image {
    flex-shrink: 0;
  }

  .profile-image img {
    width: 250px;
    height: 250px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid rgba(255, 255, 255, 0.2);
    display: none;
  }

  .profile-content {
    flex: 1;
  }

  .profile-content h1 {
    margin: 0 0 1rem 0;
    font-size: 2.5rem;
    font-weight: bold;
    white-space: nowrap;
  }

  .summary {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .technologies h3 {
    margin: 0 0 1rem 0;
    font-size: 1.3rem;
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    background: var(--accent-hex);
    color: #fafafa;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
    backdrop-filter: blur(10px);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 3rem;
    /* justify-content: center; */
  }

  .social-links a {
    color: var(--accent-hex);
    transition: color 0.3s ease;
  }

  .social-links a:hover {
    color: var(--light-purple-hex);
  }

  @media (max-width: 768px) {
    .profile-container {
      flex-direction: column;
      text-align: center;
    }
  
    .profile-content h1 {
      font-size: 2rem;
      white-space: wrap;
    }

    .profile-image img {
      width: 200px;
      height: 200px;
    }

    .social-links {
    justify-content: center;
  }
  }
</style>