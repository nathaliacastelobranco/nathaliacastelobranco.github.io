---
import { t } from '../i18n.ts';
const today = new Date();
const { lang } = Astro.props;
---

<footer>
	&copy; {today.getFullYear()} Nathalia Castelo Branco. {t(lang, "footer")}
</footer>

<style>
	footer {
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: var(--accent);
		text-align: center;
		font-size: 0.7em;
	}

</style>
