---
import { DEFAULT_LANGUAGE } from '../consts';

const redirectUrl = `/${DEFAULT_LANGUAGE}/`;
---

<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="refresh" content={`0;url=${redirectUrl}`}>
  <title>Redirecting...</title>
</head>
<body>
  <script>
    window.location.href = `${redirectUrl}`;
  </script>
  <p>Redirecting to <a href={redirectUrl}>the site</a>...</p>
</body>
</html>
